{
  "manifest_version": 2,
  "name": "RefreshPage",
  "version": "1.0",
  "permissions": [
    "storage",
    "notifications",
    "tabs",
    "alarms"
  ],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}